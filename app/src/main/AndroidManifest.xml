<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alemyapp.first">
<!--    PARA PODER USAR RECURSOS DE INTERNET-->
    <uses-permission android:name="android.permission.INTERNET"/>
<!--    ICONO DE LA APP-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/id_mando"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/id_mando_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.First">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/NoActionTheme">
<!--            EL INTENT ES PARA QUE INICIE LA APP EN ESTE SPLASH-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/NoActionTheme">
        </activity>
<!--        parentActivitiName es para que aparezca en el menu la flecha para atras y regresar a donde se le diga-->
        <activity
            android:name=".Signup"
            android:exported="true"
            android:parentActivityName=".Login"/>
        <activity
            android:name=".Main"
            android:exported="true">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>